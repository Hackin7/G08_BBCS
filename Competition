from microbit import *

totalno_students = 0

while True:
    if button_a.is_pressed() and button_b.is_pressed():
        totalno_students=totalno_students
        
    elif button_a.is_pressed():
        totalno_students+=1
        display.scroll(str(totalno_students))
        
    elif button_b.is_pressed():
        totalno_students-=1
        display.scroll(str(totalno_students))
    
    
    while True:
    
    if totalno_students():
        pin0.write_digital(1)
        
    else: 
        pin1.write_digital(1)
